#!/bin/bash

if [ ! -e /var/run/vpnc/pid ]
then
    echo "---------------------------------------- Starting VPNC"
    sudo vpnc bu-offcampus --username schuye
    # sshfs schuye@eng-grid.bu.edu:/ad /ad
else
    echo "---------------------------------------- Stopping VPNC"
    sudo umount -lf /ad && killall ssh && sudo vpnc-disconnect
fi
