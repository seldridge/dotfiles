assign [instance="rdesktop"] $workspace_4
assign [class="Vlc"] $workspace_5
assign [class="python2.7"] $workspace_7
assign [class="Steam"] $workspace_6
assign [class="FTL"] $workspace_6
assign [class="Xournal"] $workspace_5
assign [class="Okular"] $workspace_5
assign [class="JabRef"] $workspace_5
assign [class="XDvi"] $workspace_5
assign [class="libreoffice"] $workspace_3
for_window [class="python2.7"] fullscreen
for_window [class="python2.7"] focus
for_window [class="Vlc"] fullscreen
for_window [instance="^prompt-.+$"] focus
